// ┌─────────────────────────────────────────────────────────────────────────┐
// │  Claude Code 프로젝트 권한 설정 레퍼런스                                    │
// │  실제 적용 파일: .claude/settings.json  (이 파일은 문서용)                    │
// │                                                                         │
// │  공식 문서: https://code.claude.com/docs/en/settings                     │
// │  우선순위: managed > CLI args > local > project > user                   │
// │  규칙 평가: deny 먼저 → ask → allow (첫 매칭 승)                           │
// │  Bash 패턴: 접두사 매칭 (정규식 아님). :* = 콜론 와일드카드                    │
// │             셸 연산자(&&, ||, |, ;, >) 포함 시 패턴 매칭 불가 → 수동 승인     │
// │                                                                         │
// │  ⚡ 실제 3개 프로젝트(idea-fork, mealio, zzoo.dev)의                      │
// │     승인 로그를 분석하여 구성함.                                             │
// │                                                                         │
// │  경로 패턴:                                                                  │
// │     ./ = 프로젝트 루트 기준 상대경로                                       │
// │     ** = 어느 디렉터리든 (글로벌). deny에서 시크릿 차단 시 사용.           │
// │                                                                         │
// │  환경변수 프리픽스 주의:                                                    │
// │     "PYTHONPATH=src uv run" → "uv:*"로 커버 안 됨.                       │
// │     프리픽스 포함 패턴을 별도로 등록해야 함.                                  │
// │     프로젝트 고유 env(DATABASE_URL 등)는 settings.local.json에.            │
// └─────────────────────────────────────────────────────────────────────────┘
{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",

  "permissions": {
    "allow": [

      // ┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄
      //  파일 시스템
      //  deny 규칙에서 .env/secrets만 차단하므로 전체 개방.
      // ┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄
      "Read",                     // 파일 내용 읽기
      "Edit",                     // 기존 파일 부분 수정 (특정 줄 교체)
      "Write",                    // 파일 새로 생성 또는 전체 덮어쓰기
      "MultiEdit",                // 여러 파일 동시 수정
      "NotebookEdit",             // Jupyter 노트북 셀 편집

      // ┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄
      //  탐색 & 검색 — 읽기 전용, 항상 안전
      // ┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄
      "Glob",                     // 파일명 패턴 매칭 (*.ts, src/**/*.py 등)
      "Grep",                     // 파일 내용 텍스트 검색 (정규식 지원)
      "LS",                       // 디렉터리 목록 조회

      // ┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄
      //  웹 — Claude 내장 도구 (샌드박스 안에서 동작)
      // ┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄
      "WebFetch",                 // URL에서 콘텐츠 가져오기 (문서, API 응답 등)
      "WebSearch",                // 웹 검색 (에러 메시지 조회 등)

      // ┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄
      //  에이전트 내부 도구
      // ┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄
      "Task",                     // 서브에이전트 실행 (복잡한 작업을 분할)
      "TodoWrite",                // 구조화된 작업 목록 관리
      "Skill",                    // 학습된 스킬 실행

      // ┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄
      //  Git — 서브커맨드별 등록
      // ┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄
      "Bash(git add:*)",          // 스테이징 영역에 파일 추가
      "Bash(git status:*)",       // 작업 트리 상태 확인
      "Bash(git diff:*)",         // 변경사항 비교
      "Bash(git log:*)",          // 커밋 히스토리 조회
      "Bash(git show:*)",         // 커밋/객체 상세 보기
      "Bash(git branch:*)",       // 브랜치 목록/생성/삭제
      "Bash(git checkout:*)",     // 브랜치 전환 (레거시)
      "Bash(git switch:*)",       // 브랜치 전환 (신규)
      "Bash(git merge:*)",        // 브랜치 병합
      "Bash(git rebase:*)",       // 커밋 히스토리 재배치
      "Bash(git stash:*)",        // 임시 변경사항 저장/복원
      "Bash(git commit:*)",       // 변경사항 커밋
      "Bash(git push:*)",         // 원격 저장소에 푸시
      "Bash(git pull:*)",         // 원격 변경사항 가져오기 + 병합
      "Bash(git fetch:*)",        // 원격 변경사항 가져오기 (병합 없이)
      "Bash(git reset:*)",        // HEAD/스테이지 되돌리기
      "Bash(git restore:*)",      // 작업 트리 파일 복원
      "Bash(git cherry-pick:*)",  // 특정 커밋만 가져오기
      "Bash(git tag:*)",          // 태그 생성/삭제/조회
      "Bash(git remote:*)",       // 원격 저장소 관리
      "Bash(git rev-parse:*)",    // Git 참조를 SHA로 변환
      "Bash(git blame:*)",        // 줄별 마지막 수정자 확인
      "Bash(git shortlog:*)",     // 커밋 요약 통계
      "Bash(git clean:*)",        // 추적되지 않는 파일 삭제
      "Bash(git ls-tree:*)",      // 트리 객체 내용 조회 (파일 구조 확인)
      "Bash(git mv:*)",           // 파일 이동/이름변경 (Git 추적 유지)
      "Bash(git -C:*)",           // 다른 디렉터리에서 git 실행 (멀티레포 작업)

      // ┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄
      //  GitHub CLI (gh)
      // ┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄
      "Bash(gh pr:*)",            // PR 생성/조회/머지/리뷰
      "Bash(gh issue:*)",         // 이슈 생성/조회/댓글
      "Bash(gh repo:*)",          // 레포 관리 (clone, fork, create 등)
      "Bash(gh run:*)",           // GitHub Actions 워크플로우 상태/로그
      "Bash(gh auth:*)",          // 인증 상태 확인/갱신
      "Bash(gh api:*)",           // GitHub REST/GraphQL API 직접 호출
      "Bash(gh browse:*)",        // 브라우저에서 레포/PR/이슈 열기

      // ┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄
      //  Just — 프로젝트 task runner (justfile 기반)
      // ┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄
      "Bash(just:*)",             // justfile에 정의된 모든 레시피 실행

      // ┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄
      //  Node.js / Bun / 패키지 매니저
      //  상위 패턴(bun:*)이 하위(bun run:*)를 이론상 커버하지만,
      //  Claude Code가 구체적 패턴으로 따로 물어보는 경우가 실제로 있음.
      // ┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄
      "Bash(bun:*)",              // bun install, bun run, bun test 등 전부
      "Bash(bun run:*)",          // 스크립트 실행 (package.json scripts)
      "Bash(bun run lint:*)",     // 린트 실행
      "Bash(bunx:*)",             // bun 경유 패키지 실행 (npx 대응)
      "Bash(npm:*)",              // npm 전체 (install, run, test 등)
      "Bash(npm install:*)",      // 의존성 설치
      "Bash(npm run build:*)",    // 빌드 스크립트 실행
      "Bash(npm test:*)",         // 테스트 실행
      "Bash(npx:*)",              // npm 경유 패키지 실행
      "Bash(npx tsc:*)",          // TypeScript 컴파일러 실행
      "Bash(npx next build:*)",   // Next.js 프로덕션 빌드
      "Bash(npx vitest run:*)",   // Vitest 테스트 러너
      "Bash(npx jest:*)",         // Jest 테스트 러너
      "Bash(pnpm:*)",             // pnpm 패키지 매니저 전체
      "Bash(yarn:*)",             // yarn 패키지 매니저 전체
      "Bash(node:*)",             // Node.js 직접 실행 (스크립트, REPL)
      "Bash(tsc:*)",              // TypeScript 컴파일러 (글로벌)

      // ┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄
      //  Python / uv
      //  ⚠️  환경변수 프리픽스(PYTHONPATH=src)가 붙으면
      //     "uv:*"로 매칭 안 됨 → 프리픽스 패턴 별도 등록 필수.
      // ┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄
      "Bash(uv:*)",               // uv 전체 (sync, run, pip 등)
      "Bash(uv sync:*)",          // lockfile 기반 의존성 동기화
      "Bash(uv run:*)",           // uv 관리 환경에서 명령 실행
      "Bash(python:*)",           // Python 인터프리터 직접 실행
      "Bash(python3:*)",          // Python 3 명시 실행
      "Bash(pip:*)",              // pip 패키지 관리 (레거시)
      "Bash(pytest:*)",           // 테스트 러너
      "Bash(ruff:*)",             // 초고속 Python 린터/포매터
      "Bash(mypy:*)",             // 정적 타입 체커
      "Bash(uvicorn:*)",          // ASGI 서버 (FastAPI 등)
      "Bash(PYTHONPATH=src uv run:*)",         // src 레이아웃 프로젝트 실행
      "Bash(PYTHONPATH=src uv run pytest:*)",  // src 레이아웃 테스트
      "Bash(PYTHONPATH=src uv run python:*)",  // src 레이아웃 스크립트
      "Bash(PYTHONPATH=src python:*)",         // venv 없이 직접 실행
      "Bash(PYTHONPATH=src python3:*)",        // 위와 동일 (python3 명시)
      "Bash(PYTHONPATH=src .venv/bin/python:*)", // 가상환경 인터프리터 직접 지정

      // ┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄
      //  Rust / Cargo
      //  SQLX_OFFLINE=true: DB 없이 sqlx 쿼리 검증 (CI/빌드 시 필수).
      //  DATABASE_URL=... 패턴은 프로젝트마다 다르므로 settings.local.json에.
      // ┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄
      "Bash(cargo:*)",            // cargo 전체 (build, test, run 등)
      "Bash(cargo build:*)",      // 프로젝트 컴파일
      "Bash(cargo test:*)",       // 테스트 실행
      "Bash(cargo check:*)",      // 타입 체크만 (빌드보다 빠름)
      "Bash(cargo run:*)",        // 바이너리 빌드 + 실행
      "Bash(cargo clippy:*)",     // Rust 린터 (경고/제안)
      "Bash(cargo fmt:*)",        // 코드 포매팅 (rustfmt)
      "Bash(cargo sqlx:*)",       // sqlx-cli (마이그레이션, prepare 등)
      "Bash(SQLX_OFFLINE=true cargo:*)",       // DB 없이 sqlx 매크로 검증
      "Bash(SQLX_OFFLINE=true cargo check:*)", // 오프라인 타입 체크
      "Bash(SQLX_OFFLINE=true cargo build:*)", // 오프라인 빌드
      "Bash(SQLX_OFFLINE=true cargo test:*)",  // 오프라인 테스트

      // ┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄
      //  Docker
      // ┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄
      "Bash(docker:*)",           // docker 전체 (build, run, stop 등)
      "Bash(docker compose:*)",   // Compose v2 (docker compose up 등)
      "Bash(docker-compose:*)",   // Compose v1 레거시 (하이픈 구문)
      "Bash(docker ps:*)",        // 실행 중인 컨테이너 목록
      "Bash(docker exec:*)",      // 실행 중 컨테이너에서 명령 실행

      // ┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄
      //  Expo / React Native
      // ┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄
      "Bash(expo:*)",             // Expo CLI (start, prebuild, install 등)
      "Bash(eas:*)",              // Expo Application Services (빌드/배포)

      // ┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄
      //  Pulumi (Infrastructure as Code)
