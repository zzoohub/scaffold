      "Bash(tree:*)",             // 디렉터리 트리 구조 시각화
      "Bash(echo:*)",             // 텍스트 출력 (변수 확인, 파일 생성)
      "Bash(printf:*)",           // 포맷된 텍스트 출력
      "Bash(mkdir:*)",            // 디렉터리 생성 (-p 재귀 포함)
      "Bash(cp:*)",               // 파일/디렉터리 복사
      "Bash(mv:*)",               // 파일 이동/이름변경
      "Bash(rm:*)",               // 파일 삭제 (rm -rf /*는 deny에서 차단)
      "Bash(touch:*)",            // 빈 파일 생성 / 타임스탬프 갱신
      "Bash(chmod:*)",            // 파일 권한 변경 (777은 deny에서 차단)
      "Bash(chown:*)",            // 파일 소유자 변경
      "Bash(ln:*)",               // 심볼릭/하드 링크 생성
      "Bash(sed:*)",              // 스트림 편집기 (텍스트 치환)
      "Bash(awk:*)",              // 패턴 매칭/텍스트 처리
      "Bash(grep:*)",             // 텍스트 패턴 검색
      "Bash(sort:*)",             // 줄 정렬
      "Bash(uniq:*)",             // 중복 줄 제거
      "Bash(diff:*)",             // 파일 비교
      "Bash(which:*)",            // 실행 파일 경로 확인
      "Bash(type:*)",             // 명령어 종류 확인 (alias, builtin 등)
      "Bash(env:*)",              // 환경변수 목록 또는 환경 설정 후 실행
      "Bash(printenv:*)",         // 특정 환경변수 값 출력
      "Bash(export:*)",           // 환경변수 설정/내보내기
      "Bash(pwd)",                // 현재 작업 디렉터리 출력
      "Bash(date:*)",             // 날짜/시간 출력
      "Bash(xargs:*)",            // stdin을 인자로 변환하여 명령 실행
      "Bash(dirname:*)",          // 경로에서 디렉터리 부분 추출
      "Bash(basename:*)",         // 경로에서 파일명 부분 추출
      "Bash(realpath:*)",         // 절대 경로로 변환 (심링크 해소)
      "Bash(readlink:*)",         // 심볼릭 링크 대상 확인
      "Bash(jq:*)",               // JSON 파싱/변환/필터
      "Bash(yq:*)",               // YAML 파싱/변환/필터
      "Bash(cut:*)",              // 텍스트 필드 추출 (구분자 기반)
      "Bash(tr:*)",               // 문자 변환/삭제
      "Bash(tee:*)",              // stdout을 파일과 화면에 동시 출력
      "Bash(cd:*)",               // 디렉터리 이동
      "Bash(lsof:*)",             // 열린 파일/포트 확인 (포트 충돌 디버깅)
      "Bash(ps:*)",               // 실행 중 프로세스 목록
      "Bash(kill:*)",             // 프로세스 종료 (로컬 dev 서버 정리 등)
      "Bash(yes:*)",              // 자동 응답 (y 반복 출력)
      "Bash(xxd:*)",              // hex dump (바이너리 파일 디버깅)
      "Bash(file:*)",             // 파일 타입/인코딩 확인
      "Bash(stat:*)",             // 파일 상세 메타데이터 (크기, 권한, 시간)
      "Bash(du:*)",               // 디스크 사용량 확인
      "Bash(df:*)",               // 파일시스템 여유 공간 확인
      "Bash(tar:*)",              // 아카이브 생성/해제 (.tar.gz 등)
      "Bash(zip:*)",              // zip 아카이브 생성
      "Bash(unzip:*)",            // zip 아카이브 해제
      "Bash(gzip:*)",             // gzip 압축/해제
      "Bash(gunzip:*)",           // gzip 해제
      "Bash(base64:*)",           // Base64 인코딩/디코딩
      "Bash(md5sum:*)",           // MD5 체크섬 (파일 무결성 확인)
      "Bash(shasum:*)",           // SHA 체크섬
      "Bash(openssl:*)",          // 인증서/해시/암호화 도구
      "Bash(nslookup:*)",         // DNS 조회
      "Bash(dig:*)",              // DNS 상세 조회
      "Bash(ping:*)",             // 네트워크 연결 확인
      "Bash(nc:*)",               // 네트워크 연결 테스트 (netcat)
      "Bash(pbcopy:*)",           // macOS: 클립보드에 복사
      "Bash(pbpaste:*)",          // macOS: 클립보드에서 붙여넣기
      "Bash(say:*)",              // macOS: TTS 음성 출력

      // ┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄
      //  빌드 / 프레임워크 도구
      // ┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄
      "Bash(make:*)",             // Makefile 기반 빌드
      "Bash(wrangler:*)",         // Cloudflare Workers CLI (배포/개발)
      "Bash(turbo:*)",            // Turborepo (모노레포 빌드 오케스트레이션)
      "Bash(eslint:*)",           // JavaScript/TypeScript 린터
      "Bash(prettier:*)",         // 코드 포매터
      "Bash(vitest:*)",           // Vite 네이티브 테스트 러너
      "Bash(bunx vitest run:*)",  // bunx 경유 vitest 실행
      "Bash(playwright:*)",       // E2E 브라우저 테스트
      "Bash(open:*)",             // macOS: URL/파일을 기본 앱으로 열기

      // ┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄
      //  스캐폴딩 — 프로젝트 초기화 시 사용
      // ┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄
      "Bash(bunx shadcn@latest init:*)",      // shadcn/ui 프로젝트 초기화
      "Bash(bunx shadcn@latest add:*)",       // shadcn/ui 컴포넌트 추가
      "Bash(bunx create-next-app@latest:*)",  // Next.js 프로젝트 생성 (bun)
      "Bash(npx create-next-app@latest:*)",   // Next.js 프로젝트 생성 (npm)
      "Bash(npx @tailwindcss/cli:*)"          // Tailwind CSS CLI

      // ┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄
      //  MCP 플러그인 — 프로젝트별로 settings.local.json에 추가 권장
      //
      //  Playwright (브라우저 자동화):
      //    "mcp__plugin_playwright_playwright__browser_navigate",
      //    "mcp__plugin_playwright_playwright__browser_take_screenshot",
      //    "mcp__plugin_playwright_playwright__browser_console_messages",
      //    "mcp__plugin_playwright_playwright__browser_evaluate",
      //
      //  Context7 (라이브러리 최신 문서 조회):
      //    "mcp__plugin_context7_context7__resolve-library-id",
      //    "mcp__plugin_context7_context7__query-docs",
      //
      //  Neon DB (서버리스 PostgreSQL):
      //    "mcp__plugin_neon-plugin_neon__list_projects",
      //    "mcp__plugin_neon-plugin_neon__run_sql",
      //    "mcp__plugin_neon-plugin_neon__describe_project",
      //
      //  Stitch (AI UI 생성):
      //    "mcp__stitch__create_project",
      //    "mcp__stitch__generate_screen_from_text",
      //    "mcp__stitch__list_screens",
      //    "mcp__stitch__list_projects",
      //    "mcp__stitch__get_project"
      // ┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄
    ],

    "deny": [

      // ┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄
      //  시크릿 / 환경변수 파일 읽기 차단 (글로벌)
      //  ** 패턴으로 프로젝트 안팝을 불문하고 어디서든 차단.
      //  deny가 allow보다 우선이므로 Read 전체를 열어도 이것들은 안전.
      // ┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄
      "Read(**/.env)",             // 어디서든 .env 파일 읽기 차단
      "Read(**/.env.*)",           // .env.production, .env.local 등 전부
      "Read(**/.dev.vars)",        // Cloudflare Workers 로컬 시크릿
      "Read(**/secrets/**)",       // 어디서든 secrets/ 디렉터리 전체
      "Read(**/.ssh/**)",          // SSH 키 (~/.ssh 포함)
      "Read(**/credentials.json)", // GCP 등 서비스 인증 정보
      "Read(**/*.pem)",            // SSL/TLS 인증서
      "Read(**/*.key)",            // 개인키 파일
      "Read(**/*.p12)",            // PKCS#12 인증서 번들
      "Read(**/*.jks)",            // Java KeyStore

      // ┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄
      //  시스템 파괴 / 권한 상승 명령
      //  프롬프트 인젝션에 의한 최악의 시나리오 방지.
      // ┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄
      "Bash(sudo:*)",              // 루트 권한 실행 (전체 차단)
      "Bash(su:*)",                // 다른 사용자로 전환
      "Bash(rm -rf /*)",           // 루트 파일시스템 전체 삭제
      "Bash(rm -rf /)",            // 위와 동일 (슬래시만)
      "Bash(chmod 777:*)",         // 전체 읽기/쓰기/실행 (보안 취약)
      "Bash(shutdown:*)",          // 시스템 종료
      "Bash(reboot:*)",            // 시스템 재시작
      "Bash(mkfs:*)",              // 디스크 포맷 (데이터 완전 파괴)
      "Bash(dd:*)",                // 디스크 직접 읽기/쓰기 (위험한 저수준 I/O)

      // ┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄
      //  원격 접속 — 코드/시크릿 유출 위험
      //  프롬프트 인젝션 시 공격자 서버로 데이터 전송 가능.
      // ┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄
      "Bash(ssh:*)",               // 원격 서버 접속 (터널링 포함)
      "Bash(scp:*)",               // 원격 파일 복사 (업로드/다운로드)
      "Bash(rsync:*)",             // 원격 파일 동기화 (대량 전송 가능)

      // ┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄
      //  프로덕션 설정 직접 수정 방지
      // ┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄┄
      "Write(**/infra/**/*.prod.*)",  // 어디서든 프로덕션 인프라 설정 생성 차단
      "Write(**/production.*)",      // production.* 파일 생성 차단
      "Edit(**/infra/**/*.prod.*)"    // 어디서든 프로덕션 인프라 설정 수정 차단
    ]
  }
}

